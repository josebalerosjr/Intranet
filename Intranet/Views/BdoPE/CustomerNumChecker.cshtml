@model IEnumerable<Intranet.Models.BdoPE>

@{
    ViewData["Title"] = "CustomerNumChecker";
}

<h4>Corrections</h4>
<br />
<table id="cool-table" class="table table-hover small table-sm compact border" style="display: block; overflow-x: auto; white-space: nowrap;">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.DocDateInDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PosDateInDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiscalPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefDocNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocHeadT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PosKeyInNextLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccMatNextLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountDocCur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PosKeyInNextLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccMatNextLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountDocCur2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseDateDueCal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemText2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketerZ2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td class="small">
                    <a asp-action="CustomerNumCheckerEdit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg" title="Edit"></i></a>
                    @{
                        if (User.IsInRole("Office of the Chief Information Officer"))
                        {
                            <a asp-action="CustomerNumCheckerDelete" asp-route-id="@item.Id"
                               class="text-danger ml-1"
                               onclick="return confirm('Are you sure to delete this record?')">
                                <i class="fa fa-trash-alt fa-lg" title="Delete"></i>
                            </a>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocDateInDoc)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DocType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PosDateInDoc)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FiscalPeriod)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CurrentKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefDocNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocHeadT)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PosKeyInNextLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccMatNextLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountDocCur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemText)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PosKeyInNextLine2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccMatNextLine2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountDocCur2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseDateDueCal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemText2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketerZ2)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {

    <script>
        $(document).ready(function () {
            $('#cool-table').DataTable({
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <style type="text/css">
        ::-webkit-input-placeholder {
            font-style: italic;
        }
    </style>
}