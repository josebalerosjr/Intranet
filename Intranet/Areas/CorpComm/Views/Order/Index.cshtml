@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var pending = "bg-white";
    var all = "bg-white";
    var inprocess = "bg-white";
    var completed = "bg-white";
    var rejected = "bg-white";

    switch (status)
    {
        case "pending":
            pending = "active bg-primary text-white";
            break;
        case "inprocess":
            inprocess = "active bg-primary text-white";
            break;
        case "completed":
            completed = "active bg-primary text-white";
            break;
        case "rejected":
            rejected = "active bg-primary text-white";
            break;
        default:
            all = "active bg-primary text-white";
            break;
    }
}

<br />

<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Orders List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" class="btn border @inprocess" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">In Process</a>
                <a style="text-decoration:none;" class="btn border @pending" asp-controller="Order" asp-action="Index" asp-route-status="pending">Pending</a>
                <a style="text-decoration:none;" class="btn border @completed" asp-controller="Order" asp-action="Index" asp-route-status="completed">Completed</a>
                <a style="text-decoration:none;" class="btn border @rejected" asp-controller="Order" asp-action="Index" asp-route-status="rejected">Rejected</a>
                <a style="text-decoration:none;" class="btn border @all" asp-controller="Order" asp-action="Index" asp-route-status="all">All</a>
            </ul>
        </div>
    </div>

    <br /><br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Order Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/CorpComm/order.js"></script>
}