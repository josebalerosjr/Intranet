@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var all = "bg-white";
    var requestsent = "bg-white";
    var forapproval = "bg-white";
    var fordelivery = "bg-white";
    var foracknowledge = "bg-white";
    var forrating = "bg-white";
    var rejected = "bg-white";

    switch (status)
    {
        case "requestsent":
            requestsent = "active bg-primary text-white";
            break;
        case "forapproval":
            forapproval = "active bg-primary text-white";
            break;
        case "fordelivery":
            fordelivery = "active bg-primary text-white";
            break;
        case "foracknowledge":
            foracknowledge = "active bg-primary text-white";
            break;
        case "forrating":
            forrating = "active bg-primary text-white";
            break;
        case "rejected":
            rejected = "active bg-primary text-white";
            break;
        default:
            all = "active bg-primary text-white";
            break;
    }
}

<br />

<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Orders List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" class="btn border @requestsent" asp-controller="Order" asp-action="Index" asp-route-status="requestsent">Request Sent</a>
                <a style="text-decoration:none;" class="btn border @forapproval" asp-controller="Order" asp-action="Index" asp-route-status="forapproval">For Approval</a>
                <a style="text-decoration:none;" class="btn border @fordelivery" asp-controller="Order" asp-action="Index" asp-route-status="fordelivery">For Delivery</a>
                <a style="text-decoration:none;" class="btn border @foracknowledge" asp-controller="Order" asp-action="Index" asp-route-status="foracknowledge">For Acknowledgemet</a>
                <a style="text-decoration:none;" class="btn border @forrating" asp-controller="Order" asp-action="Index" asp-route-status="forrating">For Rating</a>
                <a style="text-decoration:none;" class="btn border @rejected" asp-controller="Order" asp-action="Index" asp-route-status="rejected">Rejected</a>
                <a style="text-decoration:none;" class="btn border @all" asp-controller="Order" asp-action="Index" asp-route-status="all">All</a>
            </ul>
        </div>
    </div>

    <br /><br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Order Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/CorpComm/order.js"></script>
}