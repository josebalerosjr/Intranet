@model Intranet.Models.ViewModels.CorpComm.OrderDetailsVM
@using Intranet.Utilities

<form method="post">
    <input type="hidden" asp-for="OrderHeader.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-area="CorpComm" asp-controller="Order" asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">Status Details:</span>
                                </h4>
                            </div>
                            @*<div class="row my-1">
                                    <div class="col-3">Name</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Phone</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Address</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">City</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">State</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Zip Code</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Email</div>
                                    <div class="col-9">
                                        <input id="txtName" readonly type="text" class="form-control" />
                                    </div>
                                </div>*@
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.CIOAdmin))
                                    {
                                        <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" readonly class="form-control" />
                                    }
                                </div>
                            </div>
                            @*<div class="row my-1">
                                    <div class="col-3">Carrier</div>
                                    <div class="col-9">
                                        <input type="text" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Tracking</div>
                                    <div class="col-9">
                                        <input type="text" readonly class="form-control" />
                                    </div>
                                </div>*@
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.CIOAdmin))
                                    {
                                        <input id="shippingDate" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input id="shippingDate" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" type="text" readonly class="form-control" />
                                    }
                                </div>
                            </div>
                            @*<div class="row my-1">
                                    <div class="col-3">Transaction ID</div>
                                    <div class="col-9">
                                        @if (User.IsInRole(SD.CIOAdmin))
                                        {
                                            <input asp-for="OrderHeader.TransactionId" type="text" class="form-control" />
                                        }
                                        else
                                        {
                                            <input asp-for="OrderHeader.TransactionId" type="text" readonly class="form-control" />
                                        }
                                    </div>
                                </div>*@
                            @*<div class="row my-1">
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" />
                                    </div>
                                    <div class="col-3">Payment Date</div>
                                    <div class="col-9">
                                        <input readonly id="paymentDate" type="text" class="form-control" />
                                    </div>
                                </div>*@
                            <div class="row my-1">
                                <div class="col-3">Pick-up Point</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.CIOAdmin))
                                    {
                                        <input asp-for="OrderHeader.PicupPoint" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.PicupPoint" type="text" readonly class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Status</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.CIOAdmin))
                                    {
                                        <input asp-for="OrderHeader.OrderStatus" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.OrderStatus" type="text" readonly class="form-control" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var details in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <input type="hidden" asp-for="@details.Id" />
                                                <h6 class="my-0">@details.Collateral.Name</h6>
                                                <small class="text-muted">Price : @details.Collateral.Price</small><br />
                                                <small class="text-muted">Quantity : @details.Count</small>
                                            </div>
                                            <div class="col-4">
                                                <p class="text-success">@(String.Format("{0:C}",details.Count*details.Collateral.Price))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">@(String.Format("{0:C}", Model.OrderHeader.OrderTotal))</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>

                            @if (User.IsInRole(SD.CIOAdmin))
                            {
                                if (Model.OrderHeader.OrderStatus == SD.StatusRequestSent)
                                {
                                    <a asp-action="ReceiveRequestAndForApproval" asp-route-id="@Model.OrderHeader.Id"
                                       class="btn btn-primary form-control">Receive Order</a> <br /><br />

                                    <a asp-action="ReceiveRequestAndReject" asp-route-id="@Model.OrderHeader.Id"
                                       class="btn btn-primary form-control">Reject Order</a>
                                }
                                @if (Model.OrderHeader.OrderStatus == SD.StatusForApproval)
                                {
                                    @*<input type="submit" value="Ship Order" onclick="validateInput()"
                                        class="btn btn-primary form-control" formaction="/Admin/Order/ShipOrder" formmethod="post" />*@
                                    <a asp-action="ProcessOrderAndForDelivery" asp-route-id="@Model.OrderHeader.Id"
                                       class="btn btn-primary form-control">Prepare Item</a>
                                }
                            }
                            @*else
                                {
                                    <label class="btn btn-primary form-control">@Model.OrderHeader.OrderStatus</label>
                                }*@

                            @if (!User.IsInRole(SD.CIOAdmin))
                            {
                                if (Model.OrderHeader.OrderStatus == SD.StatusForDelivery)
                                {
                                    <a asp-action="ReceiveItemAndForAcknowledgement" asp-route-id="@Model.OrderHeader.Id"
                                       class="btn btn-primary form-control">Receive Item</a>
                                }
                                if (Model.OrderHeader.OrderStatus == SD.StatusForAcknowledgement)
                                {
                                    <a asp-action="AcknowledgeAndConfirmReceipt" asp-route-id="@Model.OrderHeader.Id"
                                       class="btn btn-primary form-control">Confirm Receipt</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            var shippingDate = document.getElementById("shippingDate");

            if (shippingDate.value == '1/1/0001') {
                shippingDate.value = "";
            }
        });
    </script>
}