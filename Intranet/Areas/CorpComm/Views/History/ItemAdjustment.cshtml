@model Intranet.Models.CorpComm.History
@using Intranet.Utilities
@{
    ViewData["Title"] = "Item Adjustment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Item Adjustment</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="LoginUser"></label>
                </div>
                <div class="col-8">
                    <input asp-for="LoginUser" class="form-control" readonly value="@ViewBag.DisplayName" />
                    <span asp-validation-for="LoginUser" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CollateralName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CollateralName" class="form-control" value="@SD.histColName" readonly />
                    <span asp-validation-for="CollateralName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Action</label>
                </div>
                <div class="col-8">
                    <select name="actionz" class="form-control">
                        <option value="Plus">Plus</option>
                        <option value="Minus">Minus</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Quantity"></label>
                </div>
                <div class="col-8">
                    <input id="qty" asp-for="Quantity" class="form-control" type="number" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ReconRemarks"></label>
                </div>
                <div class="col-8">
                    <textarea id="remarks" asp-for="ReconRemarks" class="form-control"></textarea>
                    <span asp-validation-for="ReconRemarks" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                        <div class="col">
                            <a asp-area="Corpcomm" asp-controller="History" asp-action="GetAllItemHistory" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}