@model IEnumerable<Intranet.Models.CorpComm.Collateral>

<div class="row pb-3 backgroundWhite">
    @foreach (var collateral in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@collateral.ImgUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@collateral.Name</b></p>
                            <p class="card-title text-primary"><b>@collateral.Brand</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Price: <b class="">@collateral.Price</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">Remaining Count: <b class="">@collateral.Count</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@collateral.Id">Request</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>